<div class="container">
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><%= link_to "Submissions", submissions_path %></li>
      <li class="breadcrumb-item active mr-auto" aria-current="page"><%= @submission.id %></li>
    </ol>
  </nav>
  <div class="card mb-4">
    <h5 class="card-header">Video Submission for <%= @submission.item %> by <%= @submission.full_name %></h5>
    <ul class="list-group list-group-flush">
      <% if @submission.reflections %>
        <li class="list-group-item">
          <p class="fw-bold">Author's Reflections</p>
          <p class="fw-normal"><%= @submission.reflections %></p>
        </li>
      <% end %>
      <li class="list-group-item">
        <p class="fw-bold">Video</p>
        <%= video_tag url_for(@submission.video), controls: true %>
      </li>
      <li class="list-group-item">
        <p class="fw-bold">Reviews</p>
        <% if @submission.reviews.length > 0 %>
          <% @submission.reviews.each do |review| %>
            <%= render review %>
          <% end %>
        <% else %>
          <p>This submission doesn't have any reviews yet!</p>
      <% end %>
      </li>
      <li class="list-group-item">
        <p class="fw-bold">Add Review</p>
        <%= render "reviews/form" %>
      </li>
    </ul>
  </div>
</div>
